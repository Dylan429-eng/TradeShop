    <div class="nav-container">
        <a href="/admin/dashboard" class="nav-item active">
            <span class="nav-icon">🏠</span>
            <span class="nav-label">Accueil</span>
        </a>
        <a href="/admin/produits" class="nav-item">
            <span class="nav-icon">📦</span>
