
<link rel="stylesheet" href="/css/commandes/index.css">

<div class="min-h-screen">
    <div class="max-w-5xl mx-auto px-4">
        <a href="/admin/users" class="btn-add">Visualiser les Employés</a>
        <h1 class="header-title">Liste des Clients</h1>
        <table class="table-container">
            <thead>
                <tr>
                    <th>#</th><th>Nom</th><th>Email</th><th>Téléphone</th>
                    <th>Nbre_Commandes</th><th>Date d’inscription</th><th>Ville</th>
                </tr>
            </thead>
            <tbody>
                <% if (clients && clients.length > 0) { %>
                    <% clients.forEach(client => { %>
                        <tr>
                            <td><%= client.id %></td>
                            <td><%= client.name %></td>
                            <td><%= client.email %></td>
                            <td><%= client.telephone %></td>
                            <td><%= client.commandes_count %></td>
                            <td><%= client.created_at_formatted %></td>
                            <td><%= client.lieu %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="7" class="empty-state">Aucun client trouvé.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <div class="pagination"><%- pagination %></div>
    </div>
</div>
