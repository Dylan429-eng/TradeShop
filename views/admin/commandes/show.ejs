

<div class="max-w-3xl mx-auto mt-8 bg-white p-6 rounded shadow">
    <h1 class="text-xl font-bold mb-4">
        Détail de la commande #<%= commande.id %>
    </h1>

    <p><strong>Client :</strong> <%= commande.client ? commande.client.nom : '-' %></p>

    <p><strong>Montant :</strong> 
        <%= commande.total_prix ? commande.total_prix.toLocaleString() : 0 %> FCFA
    </p>

    <p><strong>Date :</strong> 
        <%= commande.createdAt ? commande.createdAt.toLocaleDateString('fr-FR', { day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit' }) : '' %>
    </p>

    <p><strong>Statut :</strong> 
        <%= commande.statut ? commande.statut.charAt(0).toUpperCase() + commande.statut.slice(1) : '' %>
    </p>

    <p><strong>Livreur :</strong> 
    <%= commande.livraison && commande.livraison.livreur ? commande.livraison.livreur.name : 'Non assigné' %>
    </p>


    <h2 class="mt-4 font-semibold">Produits :</h2>
    <ul>
        <% if (commande.details && commande.details.length > 0) { %>
            <% commande.details.forEach(detail => { %>
                <li>
                    <%= detail.produit ? detail.produit.nom : 'Produit supprimé' %> :
                    <%= detail.quantity %> x 
                    <%= detail.prix ? detail.prix.toLocaleString() : 0 %> FCFA
                </li>
            <% }) %>
        <% } else { %>
            <li>Aucun produit</li>
        <% } %>
    </ul>
</div>
